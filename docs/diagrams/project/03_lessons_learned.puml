@startuml decision_tree_simple
title Metodología de Decisiones Técnicas

start

:Nueva feature/technology idea;

if (¿Mejora vida del usuario ciego?) then (SÍ)
  if (¿Complejidad justificada?) then (SÍ)
    :IMPLEMENTAR;
    note right: Ejemplo: MiDaS\n"persona a 2.3 metros"
  else (NO)
    :SIMPLIFICAR;
    note right: Ejemplo: Audio cooldown\nInteligente vs fijo
  endif
else (NO)
  :RECHAZAR;
  note right: Ejemplo: YAW/IMU\n"orientado al Este"
endif

:Evaluar en uso real;

if (¿Funciona para usuarios?) then (SÍ)
  :MANTENER;
else (NO)
  :ITERAR;
endif

stop

@enduml