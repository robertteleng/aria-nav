@startuml
!theme plain
skinparam defaultFontSize 12
left to right direction

skinparam rectangle {
  BackgroundColor<<input>> #DBEAFE
  BackgroundColor<<process>> #D1FAE5
  BackgroundColor<<decision>> #FEF3C7
  BackgroundColor<<output>> #FCE7F3
  BorderColor black
}

rectangle "Aria Glasses\nRGB + SLAM\nIMU" as INPUT <<input>>

rectangle "YOLO\n40ms" as YOLO <<process>>
rectangle "Depth\n27ms" as DEPTH <<process>>

rectangle "Decision\nEngine\n5ms" as ENGINE <<decision>>

rectangle "Audio\nRouter" as ROUTER <<decision>>

rectangle "Beep\n100ms" as BEEP <<output>>
rectangle "TTS\n800ms" as TTS <<output>>

INPUT --> YOLO
INPUT --> DEPTH
YOLO --> ENGINE
DEPTH --> ENGINE
ENGINE --> ROUTER
ROUTER --> BEEP
ROUTER --> TTS

note bottom of ENGINE
  Zonificación + Priorización
end note

note bottom of ROUTER
  Cooldowns multinivel
end note

@enduml